
name: Chat Notify

on:
  workflow_call:
    inputs:
      appName:
        required: true
        type: string
      message:
        required: true
        type: string
      hasCommit:
        required: true
        type: boolean
      hasError:
        required: true
        type: boolean

jobs:
  send-message:
    runs-on: ubuntu-latest
    steps:
    - run: |
        echo ${{ inputs.appName }}
        echo ${{ inputs.message }}
        echo ${{ inputs.hasCommit }}
        echo ${{ inputs.hasError }}
        
